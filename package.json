{
  "name": "squash-watcher",
  "version": "1.0.0",
  "description": "An app that intermittently checks a website using Playwright and sends Telegram notifications when a condition is met",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "next dev",
    "monitor": "ts-node --project tsconfig.backend.json src/index.ts",
    "dry-run": "ts-node --project tsconfig.backend.json src/dry-run.ts",
    "clean": "rm -rf dist",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "playwright",
    "telegram",
    "monitoring",
    "website-watcher"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "dotenv": "^17.2.3",
    "node-telegram-bot-api": "^0.66.0",
    "playwright": "^1.56.1"
  },
  "devDependencies": {
    "@types/node": "^24.10.0",
    "@types/node-telegram-bot-api": "^0.64.12",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "next": "^16.0.4",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
