# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# Website Monitoring (Optional - can be disabled if only using API monitoring)
TARGET_URL=https://example.com

# Check interval in milliseconds (default: 5 minutes)
CHECK_INTERVAL=300000

# Page load timeout in milliseconds (default: 30 seconds)
PAGE_TIMEOUT=30000

# Court API Monitoring Configuration (Optional)
# Set to true to enable court availability monitoring
API_ENABLED=true

# Facility ID for the court venue
FACILITY_ID=76443

# Comma-separated list of court IDs to monitor
COURT_IDS=77385,77386,77387,77388,77389,77390,77391,77393,77392

# Comma-separated list of target times in 24h format (HHMM)
# Default: 1830,1915,2000,2045 (6:30pm, 7:15pm, 8:00pm, 8:45pm)
TARGET_TIMES=1830,1915,2000,2045

# Number of days ahead to check for availability (default: 7)
DAYS_TO_CHECK=7
